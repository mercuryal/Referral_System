@model MvcApplication1.Models.Business

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<h2>New Business</h2>
<hr>
    <div class="row-fluid">
        <div class="span6">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"> <i class="icon-align-justify"></i> </span>
                    <h5>Business-info</h5>
                </div>
                <div class="widget-content nopadding">
                    @using (Html.BeginForm("Create", "Business",
                     new { ReturnUrl = ViewBag.ReturnUrl },
                     FormMethod.Post, new { @class = "form-horizontal" }))
                     {
                        <div class="control-group">
                            <label class="control-label">Name :</label>
                            <div class="controls">
                                <input type="text" name="Name" class="span11" placeholder="Business name" />
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Addres :</label>
                            <div class="controls">
                                <input type="text" name="Addres" class="span11" placeholder="Adress" />
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Phone</label>
                            <div class="controls">
                                <input type="text" name="Phone" class="span11" placeholder="Phone number" />
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Contact name :</label>
                            <div class="controls">
                                <input type="text" name="Contact_name" class="span11" placeholder="Contact name" />
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Email :</label>
                            <div class="controls">
                                <input type="text" name="Email" class="span11" placeholder="example@example.com" />
                            </div>
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
