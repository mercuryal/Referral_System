@model IEnumerable<MvcApplication1.Models.Referral>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Referrals</h4>
                        <p class="category">Referrals database</p>
                    </div>
                    <div class="col-md-10"></div>
                    <div class="col-md-2">
                    <div class="pull-right"><a href="@Url.Action("Create", "Referral")" class="btn btn-sm btn-info btn-fill">Create new</a></div>
                    </div>   
                        <div class="content table-responsive table-full-width">
                        <table class="table table-hover table-striped">
                            <thead>
                            <th>Date</th>
                            <th>Doctor </th>
                            <th>Patient</th>
                            <th>Reason</th>
                            <th>City</th>
                            <th>State</th>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.Date
                                        </td>
                                        <td>
                                            @item.Doctor.Name @item.Doctor.Last_name
                                        </td>
                                        <td>
                                            @item.Patient.First_name  @item.Patient.Last_name
                                        </td>
                                        <td>
                                            @item.Reason.Name
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.City)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.State)
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Details","Referral", new {id=item.Id})" class="btn btn-sm btn-info btn-fill"><i class="pe-7s-settings"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
