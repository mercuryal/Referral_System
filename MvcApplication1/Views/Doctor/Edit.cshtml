@model MvcApplication1.Models.Doctor

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="header">
                        <h4 class="title">@Model.Name @Model.Middle_initial @Model.Last_name</h4>
                        <label>Doctor</label>
                    </div>
                    <div class="content">
                        @using (Html.BeginForm()) {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label>Clinic</label>
                                        <input type="text" class="form-control" name="Clinic_name" value="@Model.Clinic_name">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Office phone</label>
                                        <input type="text" class="form-control" placeholder="Username" name="Office_phone" value="@Model.Office_phone">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Email address</label>
                                        <input type="email" class="form-control" placeholder="Email" name="Email" value="@Model.Email">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label>First Name</label>
                                        <input type="text" class="form-control" placeholder="Company" name="Name" value="@Model.Name">
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label>First Name</label>
                                        <input type="text" class="form-control" placeholder="Middle" name="Middle_initial" value="@Model.Middle_initial">
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label>Last Name</label>
                                        <input type="text" class="form-control" placeholder="Last Name" name="Last_name" value="@Model.Last_name">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Address</label>
                                        <input type="text" class="form-control" placeholder="Home Address" name="Address" value="@Model.Address">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>D.E.A</label>
                                        <input type="text" class="form-control" placeholder="City" name="DEA" value="@Model.DEA">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>N.A.G.P</label>
                                        <input type="text" class="form-control" placeholder="Country" name="NAGP" value="@Model.NAGP">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>N.P.I</label>
                                        <input type="text" class="form-control" placeholder="City" name="NPI" value="@Model.NPI">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Fax</label>
                                        <input type="text" class="form-control" placeholder="Country" name="Fax" value="@Model.Fax">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Is active</label>
                                        <input type="checkbox" class="checkbox-inline" name="Active" value="@Model.Active" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Notes</label>
                                        <textarea rows="5" class="form-control" name="Notes" placeholder="Here can put a description about this doctor">@Model.Notes</textarea>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-info btn-fill pull-right">Update Profile</button>
                            <div class="clearfix"></div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-user">
                    <div class="image">
                        <img src="https://ununsplash.imgix.net/photo-1431578500526-4d9613015464?fit=crop&fm=jpg&h=300&q=75&w=400" alt="..." />
                    </div>
                    <div class="content">
                        <div class="author">
                            <a href="#">
                                <img class="avatar border-gray" src="http://res.cloudinary.com/mercuryal-labs/image/upload/v1496797025/doctor-clinic-illustration_1270-69_la7trd.jpg" alt="..." />
                                <h4 class="title">
                                    @Model.Name @Model.Last_name<br />
                                    <small>@Model.Clinic_name</small>
                                </h4>
                            </a>
                        </div>
                        <p class="description text-center">
                            Referrals assigned: <br>
                            @Model.Referrals.Count <br>
                            @Html.ActionLink("Assign new", "CreateReferral", "Doctor", new { Id = @Model.Id }, new { @class = "btn btn-primary btn-fill"})
                            
                        </p>
                    </div>
                    <hr>
                    <div class="text-center">
                        <button href="#" class="btn btn-simple"><i class="fa fa-facebook-square"></i></button>
                        <button href="#" class="btn btn-simple"><i class="fa fa-twitter"></i></button>
                        <button href="#" class="btn btn-simple"><i class="fa fa-google-plus-square"></i></button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Referrals</h4>
                        <p class="category">Referrals associated to @Model.Name @Model.Last_name</p>
                    </div>
                    <div class="content table-responsive table-full-width">
                        <table class="table table-hover table-striped">
                            <thead>
                            <th>Patient</th>
                            <th>Reason</th>
                            <th>Date</th>
                            </thead>
                            <tbody>
                                @foreach(var row in Model.Referrals)
                                {
                                <tr>
                                    <td>@row.Patient.First_name @row.Patient.Last_name</td>
                                    <td>@row.Reason.Name</td>
                                    <td>@row.Date</td>
                                    <td><a href="@Url.Action("Details", "Referral", new { id = row.Id })" class="btn btn-primary btn-fill">Details</a></td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


