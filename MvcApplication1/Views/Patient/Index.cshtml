@model IEnumerable<MvcApplication1.Models.Patient>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<div class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-12">
                <div class="card">

                    <div class="content">
                        @using(Html.BeginForm("Find", "Patient", FormMethod.Post))
                                {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <div class="row">
                                <div class="col-md-1">
                                    <label>Search</label>
                                </div>
                                <div class="col-md-10">
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="Keyword" placeholder="Keyword">
                                    </div>
                                </div>
                                <div class="col-md-1">
                                    <button type="submit" class="btn btn-md btn-info btn-fill"><i class="pe-7s-search"></i></button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Patients database</h4>
                        <p class="category">Here is a list of all your patients registered before</p>
                    </div>
                    <div class="col-md-12">
                        <a href="@Url.Action("Create","Patient")" class="btn btn-sm btn-info btn-fill pull-right">New Patient</a>
                    </div>
                    <div class="content table-responsive table-full-width">
                        <table class="table table-hover table-striped">
                            <thead>
                            <th>Name</th>
                            <th>Last Name</th>
                            <th>Middle Initial</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Phone</th>
                            <th>Referrals</th>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.First_name
                                        </td>
                                        <td>
                                            @item.Last_name
                                        </td>
                                        <td>
                                            @item.Middle_initial
                                        </td>
                                        <td>
                                            @item.Email
                                        </td>
                                        <td>
                                            @item.Address
                                        </td>
                                        <td>
                                            @item.Phone
                                        </td>
                                        <td>
                                            @item.Referrals.Count
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit","Patient", new {id=item.Id})" class="btn btn-sm btn-info btn-fill">Details</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

